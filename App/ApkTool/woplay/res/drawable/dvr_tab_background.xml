<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ff0061c0" />
                </shape>
            </item>
            <item>
                <nine-patch android:src="@drawable/guide_item_header_glow" android:dither="true" />
            </item>
        </layer-list>
    </item>
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ff0f273f" />
                </shape>
            </item>
            <item>
                <nine-patch android:src="@drawable/guide_item_header_glow" android:dither="true" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0061c0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff121f2a" />
        </shape>
    </item>
</selector>